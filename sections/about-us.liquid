<section
  id="about-section-{{ section.id }}"
  class="overflow-hidden "
  style="background:{{ section.settings.custom_bg_color }}; padding-top:{{section.settings.padding_top}}px; padding-bottom:{{section.settings.padding_bottom}}px">
  <div class="container mx-auto max-w-7xl">
    <div class="flex flex-wrap items-center justify-between">
      <div class="w-full px-2 md:px-0 lg:w-6/12">
        <div class="-mx-3 flex items-center sm:-mx-4">
          <div class="w-full px-3 sm:px-4 xl:w-1/2">
            <div class="py-3 sm:py-4">
              <img
                src="{{section.settings.first_image | img_url: 'master'}}"
                alt="About us"
                class="w-full rounded-2xl" />
            </div>
            <div class="py-3 sm:py-4">
              <img
                src="{{section.settings.second_image | img_url: 'master'}}"
                alt="About us"
                class="w-full rounded-2xl" />
            </div>
          </div>
          <div class="w-full px-3 sm:px-4 xl:w-1/2">
            <div class="relative z-10 my-4">
              <img
                src="{{section.settings.third_image | img_url: 'master'}}"
                alt="About us"
                class="w-full rounded-2xl" />
              <span class="absolute -right-7 -bottom-7 z-[-1]">
                {% render 'the-dots' %}
              </span>
            </div>
          </div>
        </div>
      </div>
      <div class="w-full px-2 md:px-0 lg:w-1/2 xl:w-5/12">
        <div class="mt-10 lg:mt-0">
          {% if section.settings.title %}
            <span class="mb-2 block text-lg font-semibold " style="color:{{ section.settings.text_color }}">
              {{ section.settings.title }}
            </span>
          {% endif %}
          {% if section.settings.sub_title %}
            <h2 class="mb-8 text-3xl font-bold  sm:text-4xl" style="color:{{ section.settings.text_color }}">
              {{ section.settings.sub_title }}
            </h2>
          {% endif %}

          <div class="mb-8" style="color: {{ section.settings.text_color }}">
            {{ section.settings.description }}
          </div>
          {% if section.settings.button_label %}
            <a href="{{section.settings.btn_url}}" class="inline-flex items-center justify-center rounded-lg primaryDarkBg py-4 px-10 text-center text-base font-normal text-white hover:bg-opacity-90 lg:px-8 xl:px-10">
              {{ section.settings.button_label }}
            </a>
          {% endif %}

        </div>
      </div>
    </div>
  </div>
</section>


{%- schema -%}
  {
    "name": "About Us",
    "settings": [
      {
        "type": "image_picker",
        "id": "first_image",
        "label": "Choose Image"
      },
      {
        "type": "image_picker",
        "id": "second_image",
        "label": "Choose Image"
      },
      {
        "type": "image_picker",
        "id": "third_image",
        "label": "Choose Image"
      },
      {
        "type": "color",
        "id": "custom_bg_color",
        "label": "Section Background Color",
        "default": "#fff"
      }, {
        "type": "color",
        "id": "text_color",
        "label": "Section Text Color",
        "default": "#000"
      }, {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "About Us"
      }, {
        "type": "text",
        "id": "sub_title",
        "label": "Sub Title",
        "default": "Why Choose Us"
      }, {
        "type": "richtext",
        "id": "description",
        "label": "Desctiption",
        "default": "<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Nulla omnis, voluptas asperiores qui excepturi quam, provident ipsa iusto, voluptate iste minima</p>"
      }, {
        "type": "text",
        "id": "button_label",
        "label": "Button Text",
        "default": "Read More"
      }, {
        "type": "url",
        "id": "btn_url",
        "label": "Button Link"
      }, {
        "type": "range",
        "id": "padding_top",
        "label": "Padding Top",
        "min": 0,
        "max": 150,
        "step": 2,
        "unit": "px",
        "default": 10
      }, {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding Bottom",
        "min": 0,
        "max": 150,
        "step": 2,
        "unit": "px",
        "default": 10
      }
    ],
    "presets": [
      {
        "name": "About Us"
      }
    ]
  }
{%- endschema -%}