{% if section.settings.gradient_bg %}
<section id="shopify-section-{{ section.id }}" class="relative z-10 overflow-hidden "  style="background: linear-gradient(90deg, #f5f7fa 0%, #c3cfe2 100%);padding-top:{{section.settings.padding_top}}px; padding-bottom:{{section.settings.padding_bottom}}px">
{% else %}
<section id="shopify-section-{{ section.id }}" class="relative z-10 overflow-hidden " style="background:{{ section.settings.custom_bg_color }};padding-top:{{section.settings.padding_top}}px; padding-bottom:{{section.settings.padding_bottom}}px">
{% endif %}
  <div class="container mx-auto max-w-7xl">
    <div class="flex flex-wrap lg:justify-between">
      <div class="w-full md:px-0 px-2 lg:w-1/2 xl:w-1/2">
        <div class="mb-12 max-w-[570px] lg:mb-0">
          {% if section.settings.subtitle != blank %}
          <span class="mb-4 block text-base font-semibold text-primary">
            {{ section.settings.subtitle }}
          </span>
          {% endif  %}
          {% if section.settings.title != blank %}
          <h2 class="mb-6 text-[32px] font-bold uppercase text-dark sm:text-[40px] lg:text-[36px] xl:text-[40px]">
            {{ section.settings.title }}
            </h2>
          {% endif %}
          {% if section.settings.description != blank %}
          <p class="mb-9 text-base leading-relaxed text-body-color">
            {{ section.settings.description }}
          </p>
        {% endif  %}
        {% if section.settings.location != blank %}
          
        <div class="mb-8 flex w-full max-w-[370px]">
          <div class="mr-6 flex h-[60px] w-full max-w-[60px] items-center justify-center overflow-hidden rounded primaryLigntBg text-primary sm:h-[70px] sm:max-w-[70px]">
            {%- render 'icon-home' -%}
            </div>
            <div class="w-full">
              <h4 class="mb-1 text-xl font-bold text-dark">{{ section.settings.location }}</h4>
              <p class="text-base text-body-color"> {{ section.settings.address }} </p>
                </div>
                </div>
          {% endif %}

          {% if section.settings.contact != blank %}
            
          <div class="mb-8 flex w-full max-w-[370px]">
            <div class="mr-6 flex h-[60px] w-full max-w-[60px] items-center justify-center overflow-hidden rounded primaryLigntBg text-primary sm:h-[70px] sm:max-w-[70px]">
              {% render 'icon-phone' %}
              </div>
              <div class="w-full">
                <h4 class="mb-1 text-xl font-bold text-dark"> {{ section.settings.contact }} </h4>
                <p class="text-base text-body-color"> {{ section.settings.phone_number }} </p>
                </div>
                </div>
          {% endif %}
          {% if section.settings.email_title != blank %}
            
          <div class="mb-8 flex w-full max-w-[370px]">
            <div class="mr-6 flex h-[60px] w-full max-w-[60px] items-center justify-center overflow-hidden rounded primaryLigntBg  sm:h-[70px] sm:max-w-[70px]">
              {% render 'icon-email' %}
              </div>
              <div class="w-full">
                <h4 class="mb-1 text-xl font-bold text-dark"> {{ section.settings.email_title }} </h4>
                  <p class="text-base text-body-color"> {{ section.settings.email_id }} </p>
                  </div>
                  </div>
                {% endif %}
        </div>
      </div>
      <div class="w-full md:px-0 px-2 lg:w-1/2 xl:w-1/2">
        <div class="relative rounded-lg bg-white p-8 shadow-lg sm:p-12">

          {% form 'contact' %}

            {% if form.errors %}
              <div class="border p-5">
                <div class="flex flex-row items-center w-full my-3">
                  <div class="text-red-500">
                    {% render 'icon-failed' %}
                  </div>
                  <div class="text-sm font-medium ml-3">
                    Oh no! Your message is not sent
                  </div>
                </div>
                <ul class="px-4 mb-3 ml-7 list-decimal">
                  {% for error in form.errors %}
                    <li>
                      <span>{{ form.errors.messages[error] }}
                      </span>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            {% elsif form.posted_successfully? %}
              <div class="flex flex-row items-center w-full my-3 p-5">
                <div class="text-green-500">
                  {% render 'icon-success' %}
                </div>
                <div class="text-sm font-medium ml-3">Your message is sent successfully</div>
              </div>
            {% endif %}
            <div class="mb-6">
              <input placeholder="Your Name" class="border-[f0f0f0] w-full rounded border py-3 px-[14px] text-base text-body-color outline-none focus-visible:shadow-none" type="text" name="contact[name]" id="contact_name" required>
            </div>
            <div class="mb-6">

              <input placeholder="Email Address" class="border-[f0f0f0] w-full rounded border py-3 px-[14px] text-base text-body-color outline-none focus-visible:shadow-none" type="email" name="contact[email]" id="contact_email" required>
            </div>


            <div class="mb-6">
              <textarea rows="7" placeholder="Your Message" class="border-[f0f0f0] w-full resize-none rounded border py-3 px-[14px] text-base text-body-color outline-none  focus-visible:shadow-none" name="contact[body]" id="contact_message" required></textarea>
            </div>

            <div class="flex px-1 mb-3">
              <input type="submit" class="w-full rounded tracking-wide primaryDarkBg py-3 text-lg uppercase text-white transition hover:bg-opacity-90" value="Send">
            </div>
          {% endform %}

          <span class="absolute -left-8 -bottom-8 z-[-1] hidden md:block">
            {% render 'the-dots' %}
          </span>
          <span class="absolute -right-8 -top-8 z-[-1] hidden md:block">
            {% render 'the-dots' %}
          </span>
        </div>
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Contact Form",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "GET IN TOUCH WITH US "
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Contact Us"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eius tempor incididunt ut labore et dolore magna aliqua. Ut enim adiqua minim veniam quis nostrud exercitation ullamco."
      },
      {
        "type": "text",
        "id": "location",
        "label": "Location Title",
        "default": "Our Location"
      },
      {
          "type": "text",
          "id": "address",
          "label": "Address",
          "default": "21st Smith Street, NY, 2001"
      },
      {
        "type": "text",
        "id": "contact",
        "label": "Contact Title",
        "default": "Phone Number"
      },
      {
          "type": "text",
          "id": "phone_number",
          "label": "Contact Number",
          "default": "999-9999-999"
      },
      {
        "type": "text",
        "id": "email_title",
        "label": "Email Title",
        "default": "Email Address"
      },
      {
          "type": "text",
          "id": "email_id",
          "label": "Email ID",
          "default": "info@abc.com"
      },
      {
        "type": "checkbox",
        "id": "gradient_bg",
        "label": "Is Gradient Background ?",
        "default": false
      }, {
        "type": "color",
        "id": "custom_bg_color",
        "label": "Section Background Color",
        "default": "#fff"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Padding Top",
        "min": 0,
        "max": 150,
        "step": 1,
        "unit": "px",
        "default": 10
      }, {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding Bottom",
        "min": 0,
        "max": 150,
        "step": 1,
        "unit": "px",
        "default": 10
      }
    ],
    "presets": [
      {
        "name": "Contact Form"
      }
    ]
  }
{% endschema %}