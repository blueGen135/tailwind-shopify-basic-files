<div class="px-4 py-8 mt-20">

  <h1 class="text-3xl text-center">{{ page.title }}
  </h1>

   <div class="max-w-7xl mx-auto">
    <!-- Product Items -->
    <div x-data="{
         get items() {
         return this.$store.header.watchingItems
        }
        }" class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <template x-for="product of items">
        <div class="w-full py-6" x-data="productItem(product)"> 
            <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
                <a :href="product.proUrl">
                    <div class="h-80 overflow-hidden">
                    <img class="w-full h-full object-cover transition duration-700 ease-in-out hover:scale-105 transform" :src="product.image">
                    </div>
                </a>

                <div class="flex flex-col p-4">
                <a :href="product.proUrl" class="text-gray-700 uppercase font-medium" x-text="product.title"> </a>
                <p class="text-gray-500" x-text="product.price"></p>
                </div>

               <a href="#" @click.prevent="removeFromWatchlist()" class="primaryDarkBg text-white flex justify-center py-3">Remove</a>
               
            </div>
            </div>
      </template>
    </div>
    <!--/ Product Items -->
  </div>
</div>


</div>