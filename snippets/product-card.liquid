<div class="w-full py-6" x-data="productItem({
                                                                                            id: '{{ product_product.id }}',
                                                                                            title:'{{ product_product.title }}',
                                                                                            image: '{{ product_product.featured_image | img_url: 'master' }}',
                                                                                            proUrl: '{{ product_product.url }}',
                                                                                            price: '{{ product_product.price | money }}'
                                                                                            })"><div class="bg-white shadow-lg overflow-hidden relative rounded-md">
    <button
      @click="addToWatchlist()"
      class="absolute top-2 left-2 z-20 w-10 h-10 rounded-full border border-1 primaryAllBorder flex items-center justify-center hover:primaryDarkBg hover:primaryFontcolor active:primaryDarkBg transition-colors"
      :class="isInWatchlist(id) ? 'primaryDarkBg text-white' : 'primaryFontcolor'">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
      </svg>
    </button>
    <a href="{{ product_product.url }}">
      {% if product_product.featured_image %}
        <div class="h-80 overflow-hidden">
          <img
            class="w-full h-full object-cover transition duration-700 ease-in-out hover:scale-105 transform"
            src="{{ product_product.featured_image | img_url: 'master' }}"
            alt="{{ product_product.featured_image.alt }}">
        </div>

      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
      {% endif %}
    </a>

    <div class="flex flex-col p-4">
      <span class="text-sm text-gray-400">{{ product_product.vendor }}
      </span>

      <a href="{{ product_product.url }}" class="text-gray-700 uppercase font-medium">{{ product_product.title }}
      </a>

      <p class="text-gray-500">{{ product_product.price | money }}
      </p>
    </div>

  </div>
</div>